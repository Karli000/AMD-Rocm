echo "| 2Ô∏è‚É£     | Kernel-Version gepr√ºft                   | ‚úÖ kompatibel      |" | tee -a "$LOG"
echo "| 3Ô∏è‚É£     | DKMS installiert                          | ‚úÖ OK              |" | tee -a "$LOG"
echo "| 4Ô∏è‚É£     | Alte Treiber bereinigt                    | ‚úÖ Bereinigt       |" | tee -a "$LOG"
echo "| 5Ô∏è‚É£     | ROCm-Komponenten installiert              | ‚úÖ Installiert     |" | tee -a "$LOG"
echo "| 6Ô∏è‚É£     | Kernelmodule geladen                      | ‚úÖ Aktiviert       |" | tee -a "$LOG"
