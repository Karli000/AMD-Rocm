#!/bin/bash

LOG="rocm_setup.log"
echo "ğŸš€ ROCm Setup gestartet: $(date)" > "$LOG"

# ğŸ§ª Ubuntu-Version & Kernel
UBUNTU=$(lsb_release -rs)
UBU_CODENAME=$(lsb_release -sc)
KERNEL=$(uname -r | cut -d '-' -f1)
MAJOR=$(echo "$KERNEL" | cut -d '.' -f1)
MINOR=$(echo "$KERNEL" | cut -d '.' -f2)
CURRENT="$MAJOR.$MINOR"

echo "ğŸ“¦ Ubuntu-Version: $UBUNTU ($UBU_CODENAME)" | tee -a "$LOG"
echo "ğŸ“¦ Kernel-Version: $CURRENT" | tee -a "$LOG"

# ğŸ” GPU-Erkennung
GPU_RAW=$(lspci | grep VGA | grep -i amd)
echo "ğŸ” GPU-Erkennung:" | tee -a "$LOG"
echo "$GPU_RAW" | tee -a "$LOG"
if echo "$GPU_RAW" | grep -Ei "RX 6[4-9]00|6600|6700|6800|6900|Navi 2[1-4]" > /dev/null; then
    echo "âœ… RDNA2 GPU erkannt (RX 6000-Serie)" | tee -a "$LOG"
else
    echo "âš ï¸ Unbekannte GPU â€“ bitte manuell prÃ¼fen!" | tee -a "$LOG"
fi

# ğŸ‘¤ Benutzergruppen
sudo usermod -a -G video,render "$USER"
echo "âœ… Benutzer $USER wurde den Gruppen 'video' und 'render' hinzugefÃ¼gt." | tee -a "$LOG"
sudo sed -i '/^ADD_EXTRA_GROUPS/d' /etc/adduser.conf
sudo sed -i '/^EXTRA_GROUPS/d' /etc/adduser.conf
echo 'ADD_EXTRA_GROUPS=1' | sudo tee -a /etc/adduser.conf
echo 'EXTRA_GROUPS=video render' | sudo tee -a /etc/adduser.conf
echo "âœ… ZukÃ¼nftige Benutzer erhalten GPU-Gruppenrechte." | tee -a "$LOG"

# ğŸ§¹ Vorbereitungen
sudo apt purge -y amdgpu-pro amdgpu
sudo apt autoremove -y

# ğŸ“¥ Installer-URL je nach Ubuntu-Version
if [[ "$UBUNTU" == "22.04" ]]; then
    INSTALLER_URL="https://repo.radeon.com/amdgpu-install/6.4.1/ubuntu/jammy/amdgpu-install_6.4.60401-1_all.deb"
elif [[ "$UBUNTU" == "24.04" ]]; then
    INSTALLER_URL="https://repo.radeon.com/amdgpu-install/6.4.1/ubuntu/noble/amdgpu-install_6.4.60401-1_all.deb"
else
    echo "âŒ Keine passende ROCm-Version fÃ¼r Ubuntu $UBUNTU gefunden." | tee -a "$LOG"
    exit 1
fi

# ğŸ“¦ Installer herunterladen & installieren
echo "ğŸ“¥ Lade Installer: $INSTALLER_URL" | tee -a "$LOG"
wget -q "$INSTALLER_URL" -O amdgpu-install.deb
sudo apt install -y ./amdgpu-install.deb

# ğŸš€ ROCm installieren
sudo amdgpu-install --usecase=rocm --no-dkms --accept-eula

# ğŸŒ Umgebungsvariablen setzen
export ROCM_PATH=/opt/rocm
export PATH="$ROCM_PATH/bin:$PATH"
export LD_LIBRARY_PATH="$ROCM_PATH/lib:$ROCM_PATH/lib64:$LD_LIBRARY_PATH"
export DEVICE_LIB_PATH="$ROCM_PATH/lib/amdgcn/bitcode"
export HSA_OVERRIDE_GFX_VERSION=10.3.0

# ğŸ“‚ Variablen dauerhaft speichern
if ! grep -q "ROCm Setup" ~/.bashrc; then
    echo -e "\n# ROCm Setup" >> ~/.bashrc
    echo "export ROCM_PATH=/opt/rocm" >> ~/.bashrc
    echo "export PATH=\$ROCM_PATH/bin:\$PATH" >> ~/.bashrc
    echo "export LD_LIBRARY_PATH=\$ROCM_PATH/lib:\$ROCM_PATH/lib64:\$LD_LIBRARY_PATH" >> ~/.bashrc
    echo "export DEVICE_LIB_PATH=\$ROCM_PATH/lib/amdgcn/bitcode" >> ~/.bashrc
    echo "export HSA_OVERRIDE_GFX_VERSION=10.3.0" >> ~/.bashrc
fi

source ~/.bashrc
echo "âœ… Umgebungsvariablen aktiv!" | tee -a "$LOG"

# ğŸ” Funktionstest
echo -e "\nğŸ” clinfo:" | tee -a "$LOG"
clinfo | tee -a "$LOG"

echo -e "\nğŸ” rocminfo:" | tee -a "$LOG"
rocminfo | tee -a "$LOG"

echo -e "\nâœ… ROCm Setup abgeschlossen." | tee -a "$LOG"
