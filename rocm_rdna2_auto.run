#!/bin/bash

LOG="rocm_setup.log"
echo "ğŸš€ ROCm Setup gestartet: $(date)" > "$LOG"

# ğŸ§ª Schritt 1 â€“ System-Check: Ubuntu-Version & Kernel
UBUNTU=$(lsb_release -rs)
KERNEL=$(uname -r | cut -d '-' -f1)
MAJOR=$(echo "$KERNEL" | cut -d '.' -f1)
MINOR=$(echo "$KERNEL" | cut -d '.' -f2)
CURRENT="$MAJOR.$MINOR"

echo "ğŸ“¦ Ubuntu-Version: $UBUNTU" | tee -a "$LOG"
echo "ğŸ“¦ Kernel-Version: $CURRENT" | tee -a "$LOG"

COMPAT=false
if [[ "$UBUNTU" == "22.04" && ( "$CURRENT" == "5.15" || "$CURRENT" == "6.8" ) ]]; then
    COMPAT=true
elif [[ "$UBUNTU" == "24.04" && ( "$CURRENT" == "6.8" || "$CURRENT" == "6.14" ) ]]; then
    COMPAT=true
fi

if [ "$COMPAT" = true ]; then
    echo "âœ… Ubuntu $UBUNTU + Kernel $CURRENT sind mit ROCm kompatibel!" | tee -a "$LOG"
else
    echo "âŒ Kombination nicht offiziell unterstÃ¼tzt â€“ Installation trotzdem fortgesetzt (Fallback mÃ¶glich)" | tee -a "$LOG"
fi

# ğŸ® GPU-Erkennung (RX 6000 Serie)
GPU_RAW=$(lspci | grep VGA | grep -i amd)
echo "ğŸ” GPU-Erkennung:" | tee -a "$LOG"
echo "$GPU_RAW" | tee -a "$LOG"

if echo "$GPU_RAW" | grep -Ei "RX 6[4-9]00|6600|6700|6800|6900|Navi 2[1-4]" > /dev/null; then
    echo "âœ… RDNA2 GPU erkannt (RX 6000-Serie)" | tee -a "$LOG"
else
    echo "âš ï¸ Keine bekannte RDNA2-GPU erkannt â€“ ggf. manuell prÃ¼fen!" | tee -a "$LOG"
fi

# ğŸ‘¤ Benutzerkonfiguration
sudo usermod -a -G video,render $USER
echo "âœ… Benutzer $USER wurde den Gruppen 'video' und 'render' hinzugefÃ¼gt." | tee -a "$LOG"

sudo sed -i '/^ADD_EXTRA_GROUPS/d' /etc/adduser.conf
sudo sed -i '/^EXTRA_GROUPS/d' /etc/adduser.conf
echo 'ADD_EXTRA_GROUPS=1' | sudo tee -a /etc/adduser.conf
echo 'EXTRA_GROUPS=video render' | sudo tee -a /etc/adduser.conf
echo "âœ… ZukÃ¼nftige Benutzer erhalten automatisch GPU-Gruppenrechte." | tee -a "$LOG"

# ğŸ› ï¸ Schritt 2 â€“ System aktualisieren
sudo apt update && sudo apt upgrade -y && sudo apt dist-upgrade -y

# ğŸ§¹ Treiber bereinigen
sudo apt purge -y rocm-dkms amdgpu-pro amdgpu
sudo rm -f /etc/apt/sources.list.d/rocm.list
sudo apt autoremove -y

# ğŸ“¥ ROCm Repo & Key hinzufÃ¼gen
ROCM_VERSION="6.4.1"
echo "deb [arch=amd64] https://repo.radeon.com/rocm/apt/$ROCM_VERSION/ ubuntu main" | sudo tee /etc/apt/sources.list.d/rocm.list
wget -qO - https://repo.radeon.com/rocm/rocm.gpg.key | sudo apt-key add -
sudo apt update

# ğŸ“¦ ROCm installieren
sudo apt install -y rocm-dev hipcc clinfo rocminfo dkms

# ğŸ”§ Modul laden
sudo modprobe amdgpu

# ğŸŒ Variablen setzen
export ROCM_PATH=/opt/rocm
export PATH=$ROCM_PATH/bin:$PATH
export LD_LIBRARY_PATH=$ROCM_PATH/lib:$ROCM_PATH/lib64:$LD_LIBRARY_PATH
export DEVICE_LIB_PATH=$ROCM_PATH/lib/amdgcn/bitcode
export HSA_OVERRIDE_GFX_VERSION=10.3.0

# ğŸ“‚ Variablen dauerhaft speichern
if ! grep -q "ROCm Setup" ~/.bashrc; then
  echo -e "\n# ROCm Setup" >> ~/.bashrc
  echo "export ROCM_PATH=/opt/rocm" >> ~/.bashrc
  echo "export PATH=\$ROCM_PATH/bin:\$PATH" >> ~/.bashrc
  echo "export LD_LIBRARY_PATH=\$ROCM_PATH/lib:\$ROCM_PATH/lib64:\$LD_LIBRARY_PATH" >> ~/.bashrc
  echo "export DEVICE_LIB_PATH=\$ROCM_PATH/lib/amdgcn/bitcode" >> ~/.bashrc
  echo "export HSA_OVERRIDE_GFX_VERSION=10.3.0" >> ~/.bashrc
fi

source ~/.bashrc
echo "âœ… Umgebungsvariablen aktiv!" | tee -a "$LOG"

# ğŸ§ª Funktionstest
echo -e "\nğŸ” OpenCL-Test:" | tee -a "$LOG"
clinfo | tee -a "$LOG"

echo -e "\nğŸ” rocminfo:" | tee -a "$LOG"
rocminfo | tee -a "$LOG"

echo -e "\nâœ… ROCm Setup abgeschlossen mit Version $ROCM_VERSION" | tee -a "$LOG"
